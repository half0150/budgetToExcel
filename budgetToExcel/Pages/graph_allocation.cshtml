@page
@model budgetToExcel.Pages.graph_allocationModel

<!DOCTYPE html>
<html>
<head>
    <title>Budget Allocation</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>
</head>
<body>

    <div class="text-center">
        <h1 class="display-4">Budget guide</h1>
    </div>
    <canvas id="budgetChart" width="500" height="500"></canvas>
    <script>
        var foodAllocation = @Model.FoodAllocation;
        var entertainmentAllocation = @Model.EntertainmentAllocation;
        var savingsAllocation = @Model.SavingsAllocation;
        var otherExpensesAllocation = @Model.OtherExpensesAllocation;

        var ctx = document.getElementById('budgetChart').getContext('2d');
        var budgetChart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: ['Food', 'Entertainment', 'Savings', 'Other Expenses'],
                datasets: [{
                    data: [foodAllocation, entertainmentAllocation, savingsAllocation, otherExpensesAllocation],
                    backgroundColor: [
                        'rgb(255, 99, 132)',
                        'rgb(54, 162, 235)',
                        'rgb(255, 205, 86)',
                        'rgb(75, 192, 192)'
                    ]
                }]
            },
            options: {
                responsive: false
            }
        });
    </script>

</body>
</html>
